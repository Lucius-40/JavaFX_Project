<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #FAF6E9;" styleClass="main-container" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.controllers.SearchResultsController">
    <children>
        <Label fx:id="searchHeaderLabel" text="Search Result for: &quot;keyword&quot;" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>
        </Label>
        <Label fx:id="resultsCountLabel" text="Found X products" textAlignment="CENTER">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButton" style="-fx-background-color: transparent;" text="Back to Home" textFill="#2673a6">
         <font>
            <Font size="12.0" />
         </font>
      </Button>
      <ScrollPane fx:id="searchScrollPane" fitToWidth="true" prefHeight="450.0" styleClass="content-area" VBox.vgrow="ALWAYS">
        <content>
            <GridPane fx:id="searchResultsGrid" alignment="CENTER" hgap="15.0" vgap="15.0">
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>
            </GridPane>
        </content>
        <VBox.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="5.0" />
        </VBox.margin>
      </ScrollPane>
    </children>
</VBox>
